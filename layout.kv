<Millyzinha>:
    canvas.before:
        Rectangle:
            source:'bg-translator.png'
            size:self.size
            pos:self.pos

    BoxLayout:
        orientation:'vertical'
        size_hint:(1,0.8)
        BoxLayout:
            spacing:50
            padding:50
            size_hint:(1,0.8)
            orientation:'horizontal'
            BoxLayout:
                size_hint:(0.5,1)
                orientation:'vertical'
                Spinner:
                    font_name:'fonte'
                    text:'Escolha um Idioma, Veyr!'
                    id:IdiomaOrigem
                    values:['Inglês','Português','Francês','Espanhol']
                    font_size:30
                    background_color:(0.98,0.4,0.70,1)

                TextInput:
                    font_name:'fonte'
                    id:Conteudo
                    multiline:False
                    font_size:35
            BoxLayout:
                size_hint:(0.5,1)
                orientation:'vertical'
                Spinner:
                    font_name:'fonte'
                    text:'Selecione o idioma resposta!'
                    id:IdiomaResposta
                    values:['Inglês','Português','Francês','Espanhol']
                    font_size:30
                    background_color:(0.98,0.4,0.70,1)

                Label:
                    font_name:'fonte'
                    text:'Sua Resposta vai aparecer aqui!'
                    font_size:30
                    id:Resposta
                    color:(0,0,0,1)
                    canvas.before:
                        Color:
                            rgba:(1,1,1,1)
                        Rectangle:
                            size:self.size
                            pos:self.pos

        FloatLayout:
            Button:
                background_color:(0.98,0.4,0.70,1)
                font_name:'fonte'
                font_size:30
                text:'traduzir'
                size_hint:(0.4,0.2)
                pos_hint:{'x':0.3,'y':0.2}
                on_release:app.traduzir()
